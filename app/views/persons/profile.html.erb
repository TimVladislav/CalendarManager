<div class="container con">
    <div class="row">
        <div class="col-sm-4 col s4">
            <div class="user-img">
                <% if !(@user.photo.length < 1) %> <img class="profile-photo" src="<%= @user.photo %>">
                    <% else %> <img class="profile-photo" src="/default.png">
                        <% end %>
            </div> <a href="/persons/<%= current_user.id %>/edit"> Редактировать профиль </a> </div>
        <div class="col-sm-8 col s8">
            <h1>Your profile</h1>
            <br />
            <div class="row">
                <dl class="dl-horizontal">
                    <div class="col s2"> <dt><span class="property">First name:</span></dt> </div>
                    <div class="col s10">
                        <dd>
                            <%= @user.name %>
                        </dd>
                    </div>
                </dl>
            </div>
            <div class="row">
                <dl class="dl-horizontal">
                    <div class="col s2"> <dt><span class="property">Second name:</span></dt> </div>
                    <div class="col s10">
                        <dd>
                            <%= @user.second_name %>
                        </dd>
                    </div>
                </dl>
            </div>
            <div class="row">
                <dl class="dl-horizontal">
                    <div class="col s2"> <dt><span class="property">Birthday:</span></dt> </div>
                    <div class="col s10">
                        <dd>
                            <%= @user.birthday %>
                        </dd>
                    </div>
                </dl>
            </div>
            <div class="row">
                <dl class="dl-horizontal">
                    <div class="col s2"> <dt><span class="property">E-mail:</span></dt> </div>
                    <div class="col s10">
                        <dd>
                            <%= @user.email %>
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>
</div>