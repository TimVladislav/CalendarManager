  <div class="col-sm-10">
    <%= text_field(:task, :title, class: "form-control") %>
  </div>
</div>
<div class="form-group">
  <%= label_tag(:task_description, "Task description:", class: "col-sm-2 control-label") %>
  <div class="col-sm-10">
    <%= text_field(:task, :description, class: "form-control") %>
  </div>
</div>
<div class="form-group">
  <%= label_tag(:task_dt, "Date:", class: "col-sm-2 control-label") %>
  <div class="col-sm-10">
    <%= text_field(:task, :dt, class: "form-control") %>
  </div>
</div>
