<div class="container">
  <h2>Task: <%= @task.title %></h2>
  <dl class="dl-horizontal">
    <dt>Task name:</dt>
    <dd><%= @task.title %></dd>
  </dl>
  <dl class="dl-horizontal">
    <dt>Description:</dt>
    <dd><%= @task.description %></dd>
  </dl>
  <dl class="dl-horizontal">
    <dt>Date:</dt>
    <dd><%= @task.dt %></dd>
  </dl>
<%= form_for :share,url: share_task_path do |t| %>
